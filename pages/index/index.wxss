
.calender-object {
    width: 100%;
    height: 100%;
    background: rgb(106,200,193);
    background:linear-gradient(300deg,rgb(106,200,193)0%,rgb(160,208,125)100%);
    background-size: cover;
    color:#fff;
    padding:35rpx;
    font-family:"Roboto Condensed";
    position: fixed;
}
.calender-object .date .date{
   font-weight: 200;
   font-size: 216rpx;
   position:relative;
   top:40rpx;
   left:385rpx;
   color: #7cbf93;
}

.calender-object .date .day{
   position: relative;
   text-transform: relative;
   top:-200rpx;
   left:0rpx;
   font-weight: bold;
   font-size: 65rpx;
   display: block;
}

.calender-object .date .time{
   font-weight: normal;
   font-size: 70rpx;
   position:relative;
   top:-170rpx;
   left:0px;
   width: 100%;
   display: block;
}

